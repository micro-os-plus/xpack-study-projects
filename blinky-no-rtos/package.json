    "@micro-os-plus/startup": "github:micro-os-plus/startup-xpack#semver:2.0.1",
    "@micro-os-plus/version": "github:micro-os-plus/version-xpack#semver:7.0.3",
    "@xpack-sifive/devices": "github:micro-os-plus/devices-sifive-xpack#semver:2.0.1",
    "@xpack-sifive/platform-hifive1": "github:micro-os-plus/platform-sifive-hifive1-xpack#semver:2.0.1"
  },
  "xpack": {
    "actions": {
      "link-deps": "xpm link @micro-os-plus/build-helper @micro-os-plus/libs-c @micro-os-plus/libs-cpp @micro-os-plus/diag-trace @micro-os-plus/semihosting @micro-os-plus/startup @micro-os-plus/devices-stm32f0-extras @micro-os-plus/devices-stm32f4-extras @micro-os-plus/architecture-cortexm @micro-os-plus/architecture-riscv @micro-os-plus/architecture-synthetic-posix @xpack-sifive/devices @xpack-sifive/platform-hifive1 @micro-os-plus/version",
      "build-stm32f4discovery-cmake": [
        "xpm run build --config stm32f4discovery-cmake-gcc10-debug",
        "xpm run build --config stm32f4discovery-cmake-gcc10-release"
      ],
      "clean-stm32f4discovery-cmake": [
        "xpm run clean --config stm32f4discovery-cmake-gcc10-debug",
        "xpm run clean --config stm32f4discovery-cmake-gcc10-release"
      ],
      "run-qemu-stm32f4discovery-cmake": [
        "xpm run executeWithQemu --config stm32f4discovery-cmake-gcc10-debug",
        "xpm run executeWithQemu --config stm32f4discovery-cmake-gcc10-release"
      ],
      "build-stm32f0discovery-cmake": [
        "xpm run build --config stm32f0discovery-cmake-gcc10-debug",
        "xpm run build --config stm32f0discovery-cmake-gcc10-release"
      ],
      "clean-stm32f0discovery-cmake": [
        "xpm run clean --config stm32f0discovery-cmake-gcc10-debug",
        "xpm run clean --config stm32f0discovery-cmake-gcc10-release"
      ],
      "run-qemu-stm32f0discovery-cmake": [
        "xpm run executeWithQemu --config stm32f0discovery-cmake-gcc10-debug",
        "xpm run executeWithQemu --config stm32f0discovery-cmake-gcc10-release"
      ],
      "build-sifive-hifive1-cmake": [
        "xpm run build --config sifive-hifive1-cmake-gcc10-debug",
        "xpm run build --config sifive-hifive1-cmake-gcc10-release"
      ],
      "clean-sifive-hifive1-cmake": [
        "xpm run clean --config sifive-hifive1-cmake-gcc10-debug",
        "xpm run clean --config sifive-hifive1-cmake-gcc10-release"
      ],
      "build-synthetic-posix-cmake": [
        "xpm run build --config synthetic-posix-cmake-debug",
        "xpm run build --config synthetic-posix-cmake-release"
      ],
      "clean-synthetic-posix-cmake": [
        "xpm run clean --config synthetic-posix-cmake-debug",
        "xpm run clean --config synthetic-posix-cmake-release"
      ],
      "build-all-cmake": [
        "xpm run build-stm32f4discovery-cmake",
        "xpm run build-stm32f0discovery-cmake",
        "xpm run build-sifive-hifive1-cmake",
        "xpm run build-synthetic-posix-cmake"
      ],
      "clean-all-cmake": [
        "xpm run clean-stm32f4discovery-cmake",
        "xpm run clean-stm32f0discovery-cmake",
        "xpm run clean-sifive-hifive1-cmake",
        "xpm run clean-synthetic-posix-cmake"
      ],
      "run-all-cmake": [
        "xpm run run-qemu-stm32f4discovery-cmake",
        "xpm run run-qemu-stm32f0discovery-cmake"
      ],
      "test-all-cmake": [
        "xpm run build-all-cmake",
        "xpm run run-all-cmake"
      ],
      "build": "xpm run build-all-cmake",
      "clean": "xpm run clean-all-cmake",
      "test": "xpm run test-all-cmake"
    },
    "properties": {
      "buildFolderRelativePath": "build/{{ configuration.name }}",
      "prepareWithCMakeAndToolchain": "cmake -S meta -B {{ configuration.buildFolderRelativePath }} -G Ninja -DCMAKE_TOOLCHAIN_FILE=../xpacks/micro-os-plus-build-helper/cmake/{{ configuration.properties.toolchainFileName }} -DPLATFORM_NAME={{ configuration.properties.platformName }} -DCMAKE_BUILD_TYPE={{ configuration.properties.buildType }}",
      "prepareWithCMake": "cmake -S meta -B {{ configuration.buildFolderRelativePath }} -GNinja -DPLATFORM_NAME={{ configuration.properties.platformName }} -DCMAKE_BUILD_TYPE={{ configuration.properties.buildType }}",
      "buildWithCMake": "cmake --build {{ configuration.buildFolderRelativePath }}",
      "cleanWithCMake": "cmake --build {{ configuration.buildFolderRelativePath }} --target clean --verbose",
      "executeWithQemu": "qemu-system-gnuarmeclipse --verbose --verbose --board {{ configuration.properties.qemuBoardName }} -d unimp,guest_errors --image {{ configuration.buildFolderRelativePath }}/blinky.elf --semihosting-config enable=on,target=native"
    },
    "buildConfigurations": {
      "stm32f4discovery-cmake-gcc10-debug": {
        "properties": {
          "buildType": "Debug",
          "platformName": "stm32f4discovery",
          "toolchainFileName": "toolchain-arm-none-eabi-gcc.cmake",
          "qemuBoardName": "STM32F4-Discovery"
        },
        "actions": {
          "build": [
            "{{ package.xpack.properties.prepareWithCMakeAndToolchain }}",
            "{{ package.xpack.properties.buildWithCMake }}"
          ],
          "clean": "{{ package.xpack.properties.cleanWithCMake }}",
          "executeWithQemu": "{{ package.xpack.properties.executeWithQemu }} --nographic --semihosting-cmdline blinky 6",
          "executeWithQemuGui": "{{ package.xpack.properties.executeWithQemu }} --semihosting-cmdline blinky 6"
        },
        "devDependencies": {
          "@xpack-dev-tools/arm-none-eabi-gcc": "10.2.1-1.1.2"
        }
      },
