    "build-synthetic-posix-cmake-debug": "cmake -S meta -B build/synthetic-posix-cmake-debug -GNinja -DPLATFORM_NAME=synthetic-posix -DCMAKE_BUILD_TYPE=Debug && cmake --build build/synthetic-posix-cmake-debug",
