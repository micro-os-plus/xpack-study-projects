    "build-all-cmake": "xpm run build-stm32f4discovery-cmake-debug && xpm run build-stm32f4discovery-cmake-release && xpm run build-stm32f0discovery-cmake-debug && xpm run build-stm32f0discovery-cmake-release && xpm run build-sifive-hifive1-cmake-debug && xpm run build-sifive-hifive1-cmake-release && xpm run build-synthetic-posix-cmake-debug && xpm run build-synthetic-posix-cmake-release",
    "clean-all-cmake": "xpm run clean-stm32f4discovery-cmake-debug && xpm run clean-stm32f4discovery-cmake-release && xpm run clean-stm32f0discovery-cmake-debug && xpm run clean-stm32f0discovery-cmake-release && xpm run clean-sifive-hifive1-cmake-debug && xpm run clean-sifive-hifive1-cmake-release && xpm run clean-synthetic-posix-cmake-debug && xpm run clean-synthetic-posix-cmake-release",
