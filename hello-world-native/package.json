{
  "name": "hello-world-native",
  "version": "0.1.0",
  "description": "A Hello World project",
  "main": "",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/<user-id>/hello-world-native.git"
  },
  "bugs": {
    "url": "https://github.com/<user-id>/hello-world-native/issues/"
  },
  "homepage": "https://github.com/<user-id>/hello-world-native/",
  "keywords": [
    "xpack"
  ],
  "author": {
    "name": "Liviu Ionescu",
    "email": "ilg@livius.net",
    "url": "https://github.com/ilg-ul/"
  },
  "license": "MIT",
  "config": {},
  "dependencies": {},
  "devDependencies": {
    "@xpack-dev-tools/cmake": "3.19.2-2.1",
    "@xpack-dev-tools/ninja-build": "1.10.2-2.1"
  },
  "xpack": {
    "properties": {
      "buildFolderRelativePath": "{% if os.platform == 'win32' %}build\\{{ configuration.name | downcase }}{% else %}build/{{ configuration.name | downcase }}{% endif %}",
      "commandCmakeGenerate": "cmake -S . -B {{ properties.buildFolderRelativePath }} -G Ninja -D CMAKE_BUILD_TYPE={{ properties.buildType }} -D CMAKE_EXPORT_COMPILE_COMMANDS=ON",
      "commandCmakeGenerateMake": "cmake -S . -B {{ properties.buildFolderRelativePath }} -G make -D CMAKE_BUILD_TYPE={{ properties.buildType }}",
      "commandCmakeBuild": "cmake --build {{ properties.buildFolderRelativePath }}",
      "commandCmakeClean": "cmake --build {{ properties.buildFolderRelativePath }} --target clean",
      "commandExecuteHello": "{% if os.platform == 'win32' %}{{ properties.buildFolderRelativePath }}\\hello-world{% else %}{{ properties.buildFolderRelativePath }}/hello-world{% endif %}"
    },
    "actions": {
      "build-all": [
        "xpm run build --config Debug",
        "xpm run build --config Release"
      ],
      "clean-all": [
        "xpm run clean --config Debug",
        "xpm run clean --config Release"
      ],
      "execute-all": [
        "xpm run execute --config Debug",
        "xpm run execute --config Release"
      ],
      "test": [
        "xpm run build-all",
        "xpm run execute-all"
      ],
      "deep-clean": "cmake -E rm -rf build xpacks"
    },
    "buildConfigurations": {
      "Debug": {
        "properties": {
          "buildType": "Debug"
        },
        "actions": {
          "generate": "{{ properties.commandCmakeGenerate }}",
          "build": [
            "{{ properties.commandCmakeGenerate }}",
            "{{ properties.commandCmakeBuild }}"
          ],
          "clean": "{{ properties.commandCmakeClean }}",
          "execute": "{{ properties.commandExecuteHello }}"
        }
      },
      "Release": {
        "properties": {
          "buildType": "Release"
        },
        "actions": {
          "generate": "{{ properties.commandCmakeGenerate }}",
          "build": [
            "{{ properties.commandCmakeGenerate }}",
            "{{ properties.commandCmakeBuild }}"
          ],
          "clean": "{{ properties.commandCmakeClean }}",
          "execute": "{{ properties.commandExecuteHello }}"
        }
      }
    }
  }
}
